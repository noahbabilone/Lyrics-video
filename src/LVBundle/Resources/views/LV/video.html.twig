{% extends "LVBundle::layout.html.twig" %}  {% block stylesheets %}      {{ parent() }}      {% stylesheets      filter='cssrewrite'      'bundles/lv/cubeportfolio/css/cubeportfolio.css'      'bundles/lv/css/portfolio.min.css'      'bundles/lv/css/card.css' %}      <link rel="stylesheet" href="{{ asset_url }}"/>      {% endstylesheets %}  {% endblock %}{% block lv_body %}    <div class="container">        <div class="row profile">            <div class="col-md-2">                {% include("LVBundle:Includes:menu.html.twig") %}            </div>            <div class="col-sm-10">                <div class="profile-content">                    {% if video is defined and video %}                        <div class="col-sm-12">                            <h3 class="page-header text-primary">Vidéos                                <small class="breadcrumb-title"><i>/</i> {{ video.title }}</small>                            </h3>                        </div>                        <div class="col-sm-12">                            <div class="row">                                <div class="col-sm-11" id="player" style="margin-bottom: 10px;">                                    <div class="embed-responsive embed-responsive-16by9">                                        <div class="" id="youtube-video"></div>                                        <div class="sous-titre hide">Commencer la video pour afficher les sous-titres                                        </div>                                        <div id="data-video" data-video="{{ video.lyrics }}"                                             data-id-video="{{ video.idVideo }}"                                             style="display: none;">                                        </div>                                        {#{{ dump(data) }}#}                                    </div>                                </div>                                {% if app.user %}                                    <div class="col-sm-12">                                        <a href="#" id="Signaler" data-toggle="modal"                                           class="btn btn-warning"                                           data-video="video_{{ video.id }}"                                           data-user="user_{{ app.user.id }}"                                        > Signaler des fautes <i class="fa fa-fw"                                                                 id="signal-icon"                                                                 aria-hidden="true"></i>                                            (<span                                                    id="current">0:00</span>                                            / <span id="duration">0:00</span>)</a>                                    </div>                                {% else %}                                    <div class="col-sm-12">                                        <p class="text-warning text-center">Veuillez se connecter pour signaler des                                            fautes sur                                            la vidéo.</p>                                    </div>                                {% endif %}                                {#<div class="col-sm-12">#}                                {#<h3 class="">{{ video.title }}</h3>#}                                {#</div>#}                            </div>                        </div>                        <div class="col-sm-12" style="margin-top: 10px;">                            <!-- Nav tabs -->                            <ul class="nav nav-tabs" role="tablist">                                <li role="presentation" class="active">                                    <a href="#videos" aria-controls="videos" role="tab"                                       data-toggle="tab">Vidéos</a>                                </li>                                <li role="presentation">                                    <a href="#comments" aria-controls="comments" role="tab"                                       data-toggle="tab">Commentaires</a>                                </li>                            </ul>                            <!-- Tab panes -->                            <div class="tab-content">                                <div role="tabpanel" class="tab-pane active" id="videos">                                    <div class="portfolio-content portfolio-1">                                        <div id="js-grid-juicy-projects" class="cbp">                                            {% for video in videos %}                                                <div class="cbp-item">                                                    <article class="card">                                                        <header class="card__thumb">                                                            <a href="{{ path('watch_video',{'id':video.id}) }}">                                                                <img src="https://i.ytimg.com/vi/{{ video.idVideo }}/mqdefault.jpg"                                                                     alt="">                                                            </a>                                                        </header>                                                        <div class="card__body">                                                            <div class="card__description">                                                                <h5 class=""><a                                                                            href="{{ path('watch_video',{'id':video.id}) }}">                                                                        {{ video.title | capitalize }}</a>                                                                </h5>                                                                <div>                                                                    <i class="fa fa-users"></i>                                                                    <small>{{ random(6) }}</small>                                                                    &nbsp;                                                                    <i class="fa fa-comments"></i>                                                                    <small>{{ random(50) }}</small>                                                                </div>                                                                {% if video.user.username %}                                                                    <div class="float">                                                                        <small>                                                                            Publié(e)<b> {{ video.user.username | capitalize }}</b>                                                                        </small>                                                                    </div>                                                                {% endif %}                                                            </div>                                                        </div>                                                    </article>                                                </div>                                            {% else %}                                                <p>Aucune vidéo disponible pour le moment</p>                                            {% endfor %}                                        </div>                                    </div>                                </div>                                <div role="tabpanel" class="tab-pane " id="comments"                                     style="padding-top: 15px; padding-bottom: 20px;">                                    {% if app.user %}                                        <div class="col-sm-10 hide" id="bloc-error">                                            <a href="#" class="close" data-dismiss="alert"                                               aria-label="close">&times;</a>                                            <div class="alert alert-danger" id="error-message"></div>                                        </div>                                        <div class="form-group">                                            <label for="comment">Messages</label>                                                <textarea class="form-control" name="comment" id="textarea-comment"                                                          rows="3" autocomplete="off"></textarea>                                        </div>                                        <div class="form-group">                                            <a class="btn btn-default btn_add_comment"                                               data-user="user_{{ app.user.id }}"                                                    {% if video is defined and video %}                                                data-video="video_{{ video.id }}"                                                    {% endif %}>Envoyer</a>                                        </div>                                    {% else %}                                        <div class="text-center">                                            <p class="alert alert-info">Veuillez se connecter pour commenter                                                la vidéo.                                                <a href="{{ path('fos_user_security_login') }}"                                                   class="text-primary"><span class="fa fa-sign-in"></span> Se                                                    connecter</a>                                                <a href="{{ path('fos_user_registration_register') }}"                                                   class="text-primary"><i class="fa fa-plus"></i>S'inscrire</a>                                            </p>                                        </div>                                    {% endif %}                                    <div class="row" id="block_comment">                                        {#{{ dump(comments) }}#}                                        {% if comments is defined %}                                            {% for comment in comments %}                                                <div class="col-sm-10">                                                    <div class="media">                                                        <div class="media-left media-middle">                                                            <a href="#">                                                                <img class="media-object"                                                                     src="data:image/svg+xml;base64,"                                                                     alt="...">                                                            </a>                                                        </div>                                                        <div class="media-body">                                                            <h4 class="media-heading"><span                                                                        class="text-capitalize">{{ comment.user.username }}</span>                                                                <small>{{ comment.date | date('d M Y à H:i',  "Europe/Paris") }}</small>                                                            </h4>                                                            <p>{{ comment.message }}</p>                                                        </div>                                                    </div>                                                </div>                                            {% endfor %}                                        {% endif %}                                    </div>                                </div>                            </div>                        </div>                    {% endif %}                </div>            </div>        </div>    </div>    <!-- Modal -->    <div class="modal fade" tabindex="-1" id="modal-signal" role="dialog">        <div class="modal-dialog" role="document">            <!-- Modal content-->            <div class="modal-content">                {#<div class="modal-header">                    <button type="button" class="close" data-dismiss="modal">&times;</button>                    <h4 class="modal-title">Suppression d'annonce n°<span id="idAds-delete"></span></h4>                </div>#}                <div class="modal-body">                    <p> Vous voulez vraiemnt signaler des fautes à                        <span class="time-signal"></span> ?</p>                </div>                <div class="modal-footer">                    <button type="button" class="btn btn-danger ok-report" data-dismiss="modal">Oui</button>                    <button type="button" class="btn btn-primary" data-dismiss="modal">Non</button>                </div>            </div>        </div>    </div>{% endblock %}{% block javascripts %}    {{ parent() }}    {% javascripts    'bundles/lv/cubeportfolio/js/jquery.cubeportfolio.min.js'    'bundles/lv/js/portfolio-1.min.js'    'https://www.youtube.com/iframe_api'    'bundles/lv/js/app.js' %}    <script src="{{ asset_url }}"></script>    {% endjavascripts %}{% endblock %}